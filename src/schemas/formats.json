  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "formats": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/Format" }
    }
  },
  "additionalProperties": false,
  "required": ["$schema", "formats"],
  "definitions": {
    "Format": {
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "extensions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "mediaTypes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "url": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["slug", "name", "url"]
    }
  }
}
