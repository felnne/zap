{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "keywords": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/AppKeywordSet" }
    }
  },
  "additionalProperties": false,
  "required": ["$schema", "keywords"],
  "definitions": {
    "AppKeywordSet": {
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "terms": {
          "type": "array",
          "items": { "$ref": "#/definitions/AppKeywordTerm" }
        }
      },
      "additionalProperties": false,
      "required": ["slug", "terms"]
    },
    "AppKeywordTerm": {
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "name": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "$ref": "#/definitions/AppKeywordMapping" }
        },
        "isoTopics": {
          "type": "array",
          "items": { "$ref": "#/definitions/IsoTopic" }
        }
      },
      "additionalProperties": false,
      "required": ["slug", "name", "keywords", "isoTopics"]
    },
    "AppKeywordMapping": {
      "type": "object",
      "properties": {
        "terms": {
          "type": "array",
          "items": { "$ref": "#/definitions/Term" }
        },
        "type": { "type": "string" },
        "thesaurus": { "$ref": "#/definitions/Thesaurus" }
      },
      "additionalProperties": false,
      "required": ["terms", "type", "thesaurus"]
    },
    "Term": {
      "type": "object",
      "properties": {
        "term": { "type": "string" },
        "href": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["term", "href"]
    },
    "IsoTopic": {
      "type": "string",
      "enum": [
        "farming",
        "biota",
        "boundaries",
        "climatologyMeteorologyAtmosphere",
        "economy",
        "elevation",
        "environment",
        "geoscientificInformation",
        "health",
        "imageryBaseMapsEarthCover",
        "intelligenceMilitary",
        "inlandWaters",
        "location",
        "oceans",
        "planningCadastre",
        "society",
        "structure",
        "transportation",
        "utilitiesCommunication",
        "extraTerrestrial",
        "disaster"
      ]
    },
    "Thesaurus": {
      "type": "object",
      "properties": {
        "title": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "href": { "type": "string" }
          },
          "additionalProperties": false,
          "required": ["value", "href"]
        },
        "dates": {
          "type": "object",
          "properties": {
            "publication": { "type": "string" }
          },
          "additionalProperties": false,
          "required": ["publication"]
        },
        "edition": { "type": "string" },
        "contact": { "$ref": "#/definitions/Contact" }
      },
      "additionalProperties": false,
      "required": ["title", "dates", "edition", "contact"]
    },
    "Contact": {
      "type": "object",
      "properties": {
        "organisation": { "$ref": "#/definitions/Organisation" },
        "phone": { "type": "string" },
        "address": { "$ref": "#/definitions/Address" },
        "email": { "type": "string" },
        "online_resource": { "$ref": "#/definitions/OnlineResource" },
        "role": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false,
      "required": ["organisation", "online_resource", "role"]
    },
    "Organisation": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "href": { "type": "string" },
        "title": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["name", "href", "title"]
    },
    "Address": {
      "type": "object",
      "properties": {
        "delivery_point": { "type": "string" },
        "city": { "type": "string" },
        "administrative_area": { "type": "string" },
        "postal_code": { "type": "string" },
        "country": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["city", "administrative_area", "country"]
    },
    "OnlineResource": {
      "type": "object",
      "properties": {
        "href": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "function": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["href", "title", "description", "function"]
    }
  }
}
