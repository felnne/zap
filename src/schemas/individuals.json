{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "contacts": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/Contact" }
    }
  },
  "additionalProperties": false,
  "required": ["$schema", "contacts"],
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "name": { "type": "string" },
        "orcid": { "type": "string" },
        "email": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["slug", "name", "orcid", "email"]
    }
  }
}
